<div class="container">
    <div class="col s12">
        <form class="student-form">
            <div class="row">
                <div class="col s12">
                    <h2>Create Student Account</h2>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <input id="student-firstname" placeholder="First Name"></input>
                </div>
                <div class="col s6">
                    <input id="student-lastname" placeholder="Last Name"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="student-email" placeholder="Email"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="student-password" placeholder="Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="student-verify" placeholder="Verify Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn">Create Account as Student</button>
                </div>
            </div>
        </form>

        <form class="tutor-form">
            <div class="row">
                <div class="col s12">
                    <h2>Create Tutor Account</h2>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <input id="tutor-firstname" placeholder="First Name"></input>
                </div>
                <div class="col s6">
                    <input id="tutor-lastname" placeholder="Last Name"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="tutor-email" placeholder="Email"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="tutor-password" placeholder="Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="tutor-verify" placeholder="Verify Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn">Create Account as Student</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/javascript/create-account.js"></script>