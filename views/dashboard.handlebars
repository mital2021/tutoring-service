<div class="container row">
    <div class="col s6 dashboard-section">

        <div class="row center">
            <p id="id" style="display: none;">{{tutor.id}}</p>
            <h2>{{tutor.first_name}} {{tutor.last_name}}</h2>
            <h5>Contact Me: <span id="email">{{tutor.email}}</span></h5>
        </div>
        <div class="row">
            <form class="update-form">
                <div>
                    <label>Enter your Subject:</label>
                    <textarea id="subject" class="white-text" class="materialize-textarea">{{tutor.subject}}</textarea>
                </div>


                <div>
                    <label>Enter your Hourly Rate:</label>
                    <textarea id="hourly_rate" class="white-text"
                        class="materialize-textarea">{{tutor.hourly_rate}}</textarea>
                </div>

                <div>
                    <label>Enter your Description:</label>
                    <textarea id="description" class="white-text"
                        class="materialize-textarea">{{tutor.description}}</textarea>
                </div>
                <div>
                    <label>Enter your Interests:</label>
                    <textarea id="interest" class="white-text"
                        class="materialize-textarea">{{tutor.interest}}</textarea>
                </div>

                <div>
                    <label>Enter your Career:</label>
                    <textarea id="career" class="white-text" class="materialize-textarea">{{tutor.career}}</textarea>
                </div>

                <div>
                
                    
                    <button type="submit" class=" btn">Submit</button>
                    
                </div>

            </form>
        </div>
        <script>  
 function fun(){  
   document.getElementById("update-form").reset();  
 }   
</script> 
    </div>
</div>


<script src="/javascript/update-profile.js"></script>