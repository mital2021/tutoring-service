<div class="container">
    <div class="col s12">
        <form class="student-form">
            <div class="row">
                <div class="col s12">
                    <h2>Login as Student</h2>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="student-email" placeholder="Email"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="student-password" placeholder="Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn">Login as Student</button>
                </div>
            </div>
        </form>

        <form class="tutor-form">
            <div class="row">
                <div class="col s12">
                    <h2>Login as Tutor</h2>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="tutor-email" placeholder="Email"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="tutor-password" placeholder="Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn">Login as Tutor</button>
                </div>
            </div>
        </form>
    </div>
</div>

