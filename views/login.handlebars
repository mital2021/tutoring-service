<div class="container row">
    <div class="col s5 login-section left">
        <form class="student-form">
            <div class="row">
                <div class="col s12">
                    <h3>Login as Student</h3>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="student-email" class="white-text" placeholder="Email"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="student-password" class="white-text" placeholder="Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn">Login as Student</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col s5 login-section right">
        <form class="tutor-form">
            <div class="row">
                <div class="col s12">
                    <h3>Login as Tutor</h3>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="tutor-email" class="white-text" placeholder="Email"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input id="tutor-password" class="white-text" placeholder="Password" type="password"></input>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn">Login as Tutor</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/javascript/login.js"></script>